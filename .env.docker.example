# Supabase (Your Hosted Instance)
DATABASE_URL=postgresql://postgres:password@your-project.supabase.co:5432/postgres

# OpenAI API
OPENAI_API_KEY=sk-your-key-here
EMBEDDING_MODEL=text-embedding-3-small
DOC_SUMMARY_MODEL=gpt-4o-mini

# AWS S3 Storage
S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_PUBLIC_BASE=https://your-bucket.s3.amazonaws.com

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# Redis
REDIS_URL=redis://redis:6379/0

# Document Processing
CHUNK_SIZE=800
MIN_CHUNK_CHARS=120
ENABLE_IMAGE_FILTERING=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB
UPLOAD_DIR=/tmp/uploads
ALLOWED_EXTENSIONS=.pdf

# Worker Configuration
WORKER_CONCURRENCY=1
WORKER_MAX_TASKS_PER_CHILD=10
WORKER_PREFETCH_MULTIPLIER=1

# Google Drive Integration (for citation links)
ENABLE_GDRIVE_UPLOAD=true
GDRIVE_CREDENTIALS_PATH=/app/service-account-key.json
GDRIVE_FOLDER_ID=1dmzG9vTj3QX5bn29IgXuUv03FTtJSLKu
