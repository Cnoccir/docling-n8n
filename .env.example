# Ingestion Pipeline Configuration

# OpenAI API (required for embeddings and document summarization)
OPENAI_API_KEY=sk-your-key-here
EMBEDDING_MODEL=text-embedding-3-small
DOC_SUMMARY_MODEL=gpt-4o-mini

# Supabase/Postgres connection
DATABASE_URL=postgresql://postgres:password@localhost:5432/niagara_rag

# S3 Image Storage (optional)
S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_PUBLIC_BASE=https://your-bucket.s3.amazonaws.com

# Chunking Parameters (optional, with defaults)
CHUNK_SIZE=800
CHUNK_OVERLAP=160
MIN_CHUNK_CHARS=120

# FastAPI Service Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log
USE_JSON_LOGS=false
ADMIN_API_TOKEN=your-secure-admin-token

# Docling Server (for Docker setup)
# Set this to use docling-serve Docker container instead of local docling library
# When unset/empty, uses local docling processing
# When set, all document processing is offloaded to the Docker container
DOCLING_SERVER_URL=http://localhost:5001

# Google Drive Integration (for citation links)
ENABLE_GDRIVE_UPLOAD=true
GDRIVE_CREDENTIALS_PATH=./service-account-key.json
GDRIVE_FOLDER_ID=1dmzG9vTj3QX5bn29IgXuUv03FTtJSLKu
